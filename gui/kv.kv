#:import dp kivy.metrics.dp

<TaskCell@BoxLayout>:
    index: 0
    text: ""
    size_hint_y: None
    height: dp(60)
    padding: dp(10)
    spacing: dp(10)
    orientation: "horizontal"

    Label:
        text: root.text
        color: (0, 0, 0, 1)
        size_hint_x: 0.8

    Button:
        text: "Done"
        on_release: app.delete_task(root.index)
        size_hint_x: 0.2
        background_color: (0, 0.7, 1, 1)

<Task_listView>:
    viewclass: "TaskCell"

    RecycleBoxLayout:
        default_size: None, dp(60)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: "vertical"
